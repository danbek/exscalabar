(function() {
	angular.module('main')
	.controller('Sidebar', ['$scope','$http', function($scope, $http) {

		$scope.save = 1;
		$scope.filter = true;

		$scope.saveData = function() {

			if ($scope.save != 0) {
				$scope.save = 0;
			} else {
				$scope.save = 1;
			}

			$http.get('http://192.168.24.73:8001/xService/General/Save?save='+$scope.save.toString());
			//alert("The button has been set to " + $scope.save.toString());
		};

		$scope.setFilter = function(val) {
			alert("The button has been set to " + val.toString());

		};

	}]);
})();
