(function() {
	angular.module('main')
	.controller('Sidebar', ['vm','$http', function(vm, $http) {

		var vm = this;
		vm.save = true;
		vm.filter = true;

		vm.saveData = function(val) {

			if (vm.save) {
				vm.save = false;
			} else {
				vm.save = true;
			}

			//$http.get('http://192.168.24.75:8001/Save?save='+val.toString());
			alert("The button has been set to " + vm.save.toString());
		};

		vm.setFilter = function(val) {
			alert("The button has been set to " + val.toString());

		};

	}]);
})();
